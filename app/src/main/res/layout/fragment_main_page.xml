<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netonboard.netonboard.Fragment.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Dashboard Header-->
        <TextView
            android:id="@+id/tv_homepage_dashboard_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="Dashboard"
            android:textColor="@color/CornflowerBlue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--Dashboard Data-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:weightSum="3">
            <!--Leave Balance-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:src="@drawable/ic_leave_icon_round" />

                    <TextView
                        android:id="@+id/tv_homepage_leave_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="8dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/DodgerBlue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_homepage_leave_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Leave Balance(Days)"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlackText"
                        android:textSize="12dp" />
                </RelativeLayout>

            </RelativeLayout>

            <!--late-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/icon_late"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_alarm_round" />

                    <TextView
                        android:id="@+id/tv_homepage_late_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="3dp"
                        android:layout_weight="1"
                        android:paddingTop="8dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/Maroon"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_late"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_homepage_late_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Total Late(Min)"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlackText"
                        android:textSize="12dp" />
                </RelativeLayout>

            </RelativeLayout>


            <!--Claim Available-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/icon_claim"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:src="@drawable/ic_claim_available_round" />

                    <TextView
                        android:id="@+id/tv_homepage_claim_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="8dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/YellowGreen"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_claim"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_homepage_claim_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Available Claim(RM)"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlackText"
                        android:textSize="12dp" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <!--Standby Support Header-->
        <LinearLayout
            android:id="@+id/tv_homepage_support_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="12">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:background="@drawable/ic_call_black_24dp"
                android:backgroundTint="@color/DarkOrange" />

            <TextView
                android:id="@+id/tv_homepage_support_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="Standby Support"
                android:textColor="@color/CornflowerBlue"
                android:textSize="18dp" />

        </LinearLayout>

        <!--Standby Support Data-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_homepage_support_header"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_layout"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <!--Support Data-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <!--Primary Support-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_homepage_support_primary_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Primary Support:"
                        android:textColor="@color/RoyalBlue"

                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_homepage_support_primary_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlackText"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--Secondary Support-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_homepage_support_secondary_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Secondary Support:"
                        android:textColor="@color/RoyalBlue"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_homepage_support_secondary_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlackText"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <!--Garbage Collector Header-->
        <LinearLayout
            android:id="@+id/tv_homepage_garbage_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="12">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:background="@drawable/ic_delete_black_24dp"
                android:backgroundTint="@color/DarkOrange" />

            <TextView
                android:id="@+id/tv_homepage_garbage_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="Garbage Collector"
                android:textColor="@color/CornflowerBlue"
                android:textSize="18dp" />

        </LinearLayout>

        <!--Garbage Collector Data-->
        <LinearLayout
            android:id="@+id/tv_homepage_misc_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="3">


            <TextView
                android:id="@+id/tv_garbage_collector_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/custom_layout"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorBlackText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_garbage_collector_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_layout"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorBlackText" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>

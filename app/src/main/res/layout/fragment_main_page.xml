<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netonboard.netonboard.Fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <!--Dashboard Header-->
    <TextView
        android:id="@+id/tv_homepage_dashboard_header"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="20dp"
        android:textColor="@color/CornflowerBlue"/>

    <!--Dashboard Data-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <!--Leave Balance-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:weightSum="2"
                android:layout_weight="1">
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_leave_icon_round"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_homepage_leave_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/DodgerBlue"
                    android:layout_weight="1"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_homepage_leave_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="10dp"
                    android:text="Leave Balance(Days)"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackText"
                    android:textSize="12dp" />
            </RelativeLayout>

        </RelativeLayout>
        <!--Claim Available-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/icon_claim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:weightSum="2"
                android:layout_weight="1">
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_claim_available_round"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_homepage_claim_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/YellowGreen"
                    android:layout_weight="1"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_claim"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_homepage_claim_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="10dp"
                    android:text="Available Claim(RM)"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackText"
                    android:textSize="12dp" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <!--Standby Support Header-->
    <LinearLayout
        android:id="@+id/tv_homepage_support_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="12">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/DarkOrange"
            android:background="@drawable/ic_call_black_24dp"
            android:layout_weight="11"
            />
        <TextView
            android:id="@+id/tv_homepage_support_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Standby Support"
            android:textColor="@color/CornflowerBlue"
            android:textSize="18dp"
            />

    </LinearLayout>

    <!--Standby Support Data-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/custom_layout"
        android:layout_below="@id/tv_homepage_support_header"
        >
        <!--Support Data-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <!--Primary Support-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_homepage_support_primary_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/RoyalBlue"
                    android:gravity="right"
                    android:text="Primary Support:"

                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_homepage_support_primary_data"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackText"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <!--Secondary Support-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_homepage_support_secondary_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/RoyalBlue"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:text="Secondary Support:"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_homepage_support_secondary_data"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackText"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!--Garbage Collector Header-->
    <LinearLayout
        android:id="@+id/tv_homepage_garbage_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:weightSum="12">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/DarkOrange"
            android:background="@drawable/ic_delete_black_24dp"
            android:layout_weight="11"
            />

        <TextView
            android:id="@+id/tv_homepage_garbage_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Garbage Collector"
            android:textColor="@color/CornflowerBlue"
            android:textSize="18dp"
            />

    </LinearLayout>

    <!--Garbage Collector Data-->
    <LinearLayout
        android:id="@+id/tv_homepage_misc_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        >


        <TextView
            android:id="@+id/tv_garbage_collector_date"
            android:background="@drawable/custom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlackText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/tv_garbage_collector_name"
            android:background="@drawable/custom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"/>



    </LinearLayout>

</FrameLayout>
